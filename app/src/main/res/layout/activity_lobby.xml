<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.charleshalim.mathbraindesign2.Lobby"


    android:background="#1fbba6"


    android:weightSum="1">


    <EditText
        android:id="@+id/editText4"
        android:layout_width="193dp"
        android:layout_height="31dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_weight="0.98"
        android:background="#ffffff"
        android:hint="username"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_alignBottom="@+id/imageButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintHorizontal_bias="0.083" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="211dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="422dp"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_weight="0.98"
        android:background="#ffffff"
        android:ems="10"
        android:hint="room name"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        tools:layout_editor_absoluteY="459dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/s_61456"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button4"
        android:layout_toLeftOf="@+id/button4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/editText4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Exit"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageButton"
        tools:layout_editor_absoluteY="2dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.651"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="69dp"
        android:layout_height="46dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="417dp"
        android:text="Create"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/button10"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        android:layout_marginStart="14dp"
        tools:layout_editor_absoluteY="451dp"
        tools:layout_editor_absoluteX="323dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="417dp"
        android:text="Medium"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/editText5"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        android:layout_marginStart="13dp"
        tools:layout_editor_absoluteY="456dp"
        tools:layout_editor_absoluteX="222dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="324dp"
        android:layout_height="101dp"
        android:layout_marginLeft="30dp"
        android:background="#214784"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        android:id="@+id/constraintLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <Button
            android:id="@+id/button11"
            android:layout_width="76dp"
            android:layout_height="35dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="20dp"
            android:text="Join"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:text="username"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Difficulty :"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="34dp"
            android:layout_height="19dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Easy"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/textView8"
            app:layout_constraintRight_toLeftOf="@+id/button11"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.756" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:text="Room name"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
